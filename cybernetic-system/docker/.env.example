# Cybernetic VSM Platform - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=changeme_in_production
DATABASE_URL=postgres://cybernetic:${POSTGRES_PASSWORD}@postgres:5432/cybernetic
DATABASE_SSL=false
POOL_SIZE=10

# =============================================================================
# MESSAGE BROKER
# =============================================================================
RABBITMQ_PASSWORD=changeme_in_production
AMQP_URL=amqp://cybernetic:${RABBITMQ_PASSWORD}@rabbitmq:5672

# =============================================================================
# CACHE
# =============================================================================
REDIS_PASSWORD=changeme_in_production
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o
OPENAI_CHAT_COMPLETIONS_PATH=/v1/chat/completions
OPENAI_EMBEDDINGS_PATH=/v1/embeddings

# Together AI
TOGETHER_API_KEY=

# Groq
GROQ_API_KEY=

# OpenRouter
OPENROUTER_API_KEY=

# Ollama (local)
OLLAMA_ENDPOINT=http://ollama:11434

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=

# HMAC secret for message signing
CYBERNETIC_HMAC_SECRET=

# Erlang cookie for distributed Erlang
RELEASE_COOKIE=cybernetic_cookie_change_in_production

# =============================================================================
# APPLICATION
# =============================================================================
MIX_ENV=prod
PHX_HOST=localhost
PORT=4000

# =============================================================================
# OBSERVABILITY
# =============================================================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=cybernetic

# Prometheus metrics port
METRICS_PORT=9568

# Grafana
GRAFANA_PASSWORD=changeme_in_production

# =============================================================================
# TELEGRAM BOT (Optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Skip migrations on startup (useful for debugging)
SKIP_MIGRATIONS=false

# Run seeds on startup
RUN_SEEDS=false
