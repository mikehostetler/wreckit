# Cybernetic VSM Framework Environment Variables
# Copy this file to .env and fill in your values

# AMQP Configuration
AMQP_URL=amqp://cybernetic:changeme@localhost:5672
RABBITMQ_PASSWORD=changeme

# Database Configuration  
DATABASE_URL=postgres://cybernetic:changeme@localhost:5432/cybernetic
POSTGRES_PASSWORD=changeme

# Redis Configuration
REDIS_URL=redis://default:changeme@localhost:6379
REDIS_PASSWORD=changeme

# AI Provider API Keys
# NEVER commit actual API keys to the repository!
# Always use environment variables or secure key management
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
TOGETHER_API_KEY=your-together-api-key-here

# LLM Stack Configuration
# Options: legacy_httpoison (default) or req_llm_pipeline
LLM_STACK=legacy_httpoison

# Ollama Configuration
OLLAMA_ENDPOINT=http://localhost:11434

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=cybernetic

# Security
# NOTE: Production enforces strong secrets (see docs/DEPLOYMENT.md).
CYBERNETIC_HMAC_SECRET=generate-a-secure-random-string-here
SECRET_KEY_BASE=generate-another-secure-random-string-here
JWT_SECRET=generate-at-least-32-characters-here
PASSWORD_SALT=generate-at-least-16-characters-here
CYBERNETIC_SYSTEM_API_KEY=cyb_generate-a-secure-api-key-here
TELEGRAM_WEBHOOK_SECRET=generate-a-telegram-webhook-secret-token-here

# Application Settings
PHX_HOST=localhost
PORT=4000
POOL_SIZE=10
MIX_ENV=dev

# Grafana Admin Password
GRAFANA_PASSWORD=changeme

# Docker Registry (for CI/CD)
REGISTRY=ghcr.io
IMAGE_NAME=your-org/cybernetic
